<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".toolkits.tool00006.Tool00006MainActivity">

    <com.abstractplayer.abstracttool.main.tool.view.MainToolBarOnlyBackup
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.abstractplayer.abstracttool.common.view.widget.ButtonCommonBig
                android:id="@+id/tool00006_btn_scan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                app:button_title="扫码" />

            <com.abstractplayer.abstracttool.common.view.widget.ButtonCommonBig
                android:id="@+id/tool00006_btn_copy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:visibility="gone"
                app:button_title="复制（结果如下）" />

            <TextView
                android:id="@+id/tool00006_scan_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_text_multi_line_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_text_multi_line_margin_horizontal"
                android:layout_marginBottom="@dimen/common_widget_margin_vertical"
                android:background="@drawable/common_shape_text_multi_line"
                android:gravity="top|left"
                android:paddingLeft="@dimen/common_text_padding_left"
                android:paddingTop="@dimen/common_text_padding_top"
                android:paddingRight="@dimen/common_text_padding_right"
                android:paddingBottom="@dimen/common_text_padding_bottom"
                android:textColor="@color/common_text"
                android:textSize="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>