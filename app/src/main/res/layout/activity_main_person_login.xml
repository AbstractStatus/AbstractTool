<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.person.MainPersonLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_margin_status_bar_default"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                style="@style/CommonEditTextWithUnderLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/common_edit_single_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_edit_single_margin_horizontal"
                android:paddingLeft="@dimen/common_edit_padding_left"
                android:paddingTop="@dimen/common_edit_padding_top"
                android:paddingRight="@dimen/common_edit_padding_right"
                android:paddingBottom="@dimen/common_edit_padding_bottom"
                android:ems="10"
                android:hint="输入账号"
                android:inputType="textPersonName"
                android:textColor="@color/common_text"
                android:textColorHint="@color/common_text_hint" />

            <EditText
                android:id="@+id/editTextTextPassword"
                style="@style/CommonEditTextWithUnderLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/common_edit_single_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_edit_single_margin_horizontal"
                android:ems="10"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/common_edit_padding_left"
                android:paddingTop="@dimen/common_edit_padding_top"
                android:paddingRight="@dimen/common_edit_padding_right"
                android:paddingBottom="@dimen/common_edit_padding_bottom"
                android:textColor="@color/common_text"
                android:textColorHint="@color/common_text_hint" />

            <com.abstractplayer.abstracttool.common.view.widget.ButtonCommonBig
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginBottom="@dimen/common_widget_margin_vertical"
                app:button_title="登录" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>