<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/common_widget_margin_vertical"
    android:orientation="vertical"
    tools:context=".toolkits.tool00009.Tool00009MainActivity">

    <com.abstractplayer.abstracttool.main.tool.view.MainToolBarOnlyBackup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.abstractplayer.abstracttool.main.tool.view.MainToolBarOnlyBackup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/tool00009_color_view"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_widget_margin_vertical">

                <TextView
                    android:id="@+id/tool00009_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00000000"
                    android:textSize="36dp" />
            </FrameLayout>

            <SeekBar
                android:id="@+id/tool00009_seek_bar_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_seek_bar_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_seek_bar_margin_horizontal"
                android:max="255"
                android:progressDrawable="@drawable/tool00009_seek_bar_shape"
                android:thumb="@null" />

            <SeekBar
                android:id="@+id/tool00009_seek_bar_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_seek_bar_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_seek_bar_margin_horizontal"
                android:max="255"
                android:progressDrawable="@drawable/tool00009_seek_bar_shape"
                android:thumb="@null" />

            <SeekBar
                android:id="@+id/tool00009_seek_bar_g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_seek_bar_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_seek_bar_margin_horizontal"
                android:max="255"
                android:progressDrawable="@drawable/tool00009_seek_bar_shape"
                android:thumb="@null" />

            <SeekBar
                android:id="@+id/tool00009_seek_bar_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_seek_bar_margin_horizontal"
                android:layout_marginTop="@dimen/common_widget_margin_vertical"
                android:layout_marginRight="@dimen/common_seek_bar_margin_horizontal"
                android:layout_marginBottom="@dimen/common_widget_margin_vertical"
                android:max="255"
                android:progressDrawable="@drawable/tool00009_seek_bar_shape"
                android:thumb="@null" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>